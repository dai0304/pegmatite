{
  "manifest_version": 2,
  "name": "Pegmatite",
  "version": "1.6.0",
  "description": "Shows graphs and diagrams rendered by PlantUML.",
  "permissions": [
    "storage", 
    "tabs",
    "contextMenus"
  ],
  "optional_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "background": {
    "scripts": [
      "webext-domain-permission-toggle.js",
      "webext-dynamic-content-scripts.js",
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "js": ["rawdeflate.js", "content-script.js"],
      "matches": [
        "https://github.com/*"
      ]
    }
  ]
}
